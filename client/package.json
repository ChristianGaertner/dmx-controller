{
  "name": "dmx-controller",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "tailwindcss": "^1.0.1",
    "redux-logger": "^3.0.6"
  },
  "scripts": {
    "start": "npm run watch:css & react-scripts start",
    "build": "npm run build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:css": "postcss src/index.pcss -o src/index.css",
    "watch:css": "postcss src/index.pcss -o src/index.css -w"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/jest": "24.0.13",
    "@types/node": "12.0.2",
    "@types/react": "16.8.17",
    "@types/react-dom": "16.8.4",
    "@types/react-redux": "^7.0.9",
    "@types/redux-logger": "^3.0.7",
    "autoprefixer": "^9.5.1",
    "classnames": "^2.2.6",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "postcss-cli": "^6.1.2",
    "prettier": "^1.17.1",
    "react-scripts": "3.0.1",
    "typescript": "3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,css,json,md}": [
      "prettier --write --trailing-comma all",
      "git add"
    ]
  }
}
